{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "src",
    "target": "es2018",
    "paths": {
      "+dumb/*" : [
        "universal/dumb/*"
      ],
      "+root/*" : [
        "*"
      ]
    },
  },
  "include": [
    "webpack/custom.d.ts",
    "src/interfaces/index.d.ts",
    "src/**/*",
  ],
  "exclude": [
    "dist/",
    "node_modules",
    "**/*/stories.js",
    "**/*.spec.ts",
    "server/**/*",
    "plop-templates/**/*"
  ]
}
