{
  "name": "murder-with-friends",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && NODE_ENV=production webpack -p --config ./webpack/production.js && cp -R static dist",
    "deploy": "yarn build && firebase deploy && rm -rf dist",
    "start": "webpack-dev-server --progress --colors --hot --content-base . --config webpack/development.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "graphql:types": "rm -rf server/types.compiled.graphql && cat server/types/*.graphql > server/types.compiled.graphql",
    "graphql:mutations": "rm -rf server/mutations.compiled.graphql && cat server/mutations/*.graphql > server/mutations.compiled.graphql"
  },
  "author": "Tim Shedor <tshedor@gmail.com>",
  "dependencies": {
    "@babel/core": "7.0.0-beta.51",
    "@babel/polyfill": "7.0.0-beta.51",
    "@babel/preset-env": "7.0.0-beta.51",
    "@babel/preset-react": "7.0.0-beta.51",
    "@babel/preset-stage-0": "7.0.0-beta.51",
    "@babel/preset-typescript": "7.0.0-beta.51",
    "@firebase/app-types": "^0.3.2",
    "@types/classnames": "^2.2.4",
    "@types/history": "^4.6.2",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.2.7",
    "autoprefixer": "^7.1.2",
    "babel-core": "^7.0.0-0",
    "babel-loader": "8.0.0-beta.0",
    "classnames": "^2.2.6",
    "css-loader": "^0.28.11",
    "eslint-loader": "^2.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "firebase": "^4.3.0",
    "html-webpack-plugin": "^2.30.1",
    "json-loader": "^0.5.7",
    "jsx-loader": "^0.13.2",
    "moment": "^2.18.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "prop-types": "^15.5.10",
    "query-string": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
