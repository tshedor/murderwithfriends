{
  "name": "murder-with-friends",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && NODE_ENV=production BUILD_ENV=production webpack -p --config ./webpack/production.js",
    "analyze": "rm webpack/stats.json && webpack --profile --json --config webpack/development.js >> webpack/stats.json && ./node_modules/.bin/webpack-bundle-analyzer webpack/stats.json",
    "deploy": "yarn build && firebase deploy && rm -rf dist",
    "start": "webpack-dev-server --progress --colors --hot --content-base . --config webpack/development.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "NODE_ENV=production BUILD_ENV=production build-storybook -c .storybook -o dist-storybook",
    "graphql:deploy": "> graphcool.yml && yarn graphql:permissions && yarn graphql:types && graphcool deploy",
    "graphql:permissions": "rm -rf server/permissions.compiled.yml && cat server/permissions/*.yml > server/permissions.compiled.yml && echo \"permissions:\" >> graphcool.yml && cat server/permissions.compiled.yml >> graphcool.yml && echo \"\n\" >> graphcool.yml",
    "graphql:types": "COLLECTION=types yarn graphql:concat && echo \"types: ./server/types.compiled.graphql\n\" >> graphcool.yml",
    "graphql:concat": "rm -rf server/$COLLECTION.compiled.yml && cat server/$COLLECTION/*.graphql > server/$COLLECTION.compiled.graphql"
  },
  "author": "Tim Shedor <tshedor@gmail.com>",
  "dependencies": {
    "@babel/core": "7.0.0-beta.51",
    "@babel/polyfill": "7.0.0-beta.51",
    "@babel/preset-env": "7.0.0-beta.51",
    "@babel/preset-react": "7.0.0-beta.51",
    "@babel/preset-stage-0": "7.0.0-beta.51",
    "@babel/preset-typescript": "7.0.0-beta.51",
    "@firebase/app-types": "^0.3.2",
    "@types/classnames": "^2.2.4",
    "@types/history": "^4.6.2",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.2.7",
    "autoprefixer": "^7.1.2",
    "babel-core": "^7.0.0-0",
    "babel-loader": "8.0.0-beta.0",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "eslint-loader": "^2.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "firebase": "^4.3.0",
    "html-webpack-plugin": "^2.30.1",
    "json-loader": "^0.5.7",
    "jsx-loader": "^0.13.2",
    "moment": "^2.18.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "precss": "^2.0.0",
    "prop-types": "^15.5.10",
    "query-string": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.3.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.18.2",
    "ts-loader": "^3.5.0",
    "typescript": "^2.9.1",
    "webpack": "^3.4.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react",
      [
        "@babel/preset-stage-0",
        {
          "decoratorsLegacy": true
        }
      ]
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true
  },
  "devDependencies": {
    "@storybook/react": "^3",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
